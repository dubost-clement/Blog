{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="text-center">Gestion des catégories</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>nom</th>
            <th>actions</th>
        </tr>
    </thead>
    <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>
                    <a href="{{ path('category_update', {'id': category.id}) }}" class="btn btn-primary mr-2">modifier</a>
                    <a href="{{ path('category_delete', {'id': category.id}) }}" class="btn btn-danger">Supprimer</a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
<a href="{{ path('category_create') }}" class="btn btn-primary mr-3">Créer une catégories</a>
<a href="{{ path('admin') }}" class="btn btn-primary">Retour</a>

{% endblock %}