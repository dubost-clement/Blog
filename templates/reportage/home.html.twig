{% extends 'base.html.twig' %}

{% block body %}
    <header>
        <img src="{{asset('images/photo.jpg')}}" class="img-fluid" alt="">
    </header>
    <h1>Bienvenue sur mon portfolio</h1>
    <div class="last-sport">
        {% for lastReportage in lastReportages %}
            <h2 class="text-center my-3">Dernier shooting {{ lastReportage.category.name }}</h2>
            <article class="border m-5 p-3">
                <div class="content">
                    <img src="{{ vich_uploader_asset(lastReportage, 'imageFile') }}" class="img-fluid" alt="image illustration du reportage photo">
                </div>
                <p class="metadata">Écrit le {{ lastReportage.createdAt | date('d/m/Y') }} catégorie <a href="{{ path('personnel', {'slug': lastReportage.category.name}) }}">{{ lastReportage.category.name }}<a/></p>
                <a href="{{ path('personnel_show', {'slug': lastReportage.category.name, 'id': lastReportage.id}) }}" class="btn btn-primary">Voir le reportage</a>
            </article>
        {% endfor %}
    </div>

{% endblock %}