{% extends 'base.html.twig' %}
{% block title %}Liste shooting  {{ name }}{% endblock %}

{% block body %}
    <h1 class="text-center">Shooting {{ name }}</h1>
    <section class="reportages">
        {% for reportage in pagination %}
            <article class="border m-2 m-md-4 p-2 p-md-3">
                <h2>{{ reportage.title }}</h2>
                <div class="metadata">Écrit le {{ reportage.createdAt | date('d/m/Y') }} à {{ reportage.createdAt | date('H:i') }}</div>
                <div class="content">
                    <p><img src="{{ vich_uploader_asset(reportage, 'imageFile') }}" class="img-fluid"alt="images de présentation des reportages"></p>
                    <a href="{{ path('personnel_show', {'slug': reportage.category.name, 'id': reportage.id}) }}" class="btn btn-primary">Voir le reportage</a>
                </div>
            </article>

        {% endfor %}
    </section>

    <div class="navigation d-flex justify-content-center">
        {{ knp_pagination_render(pagination) }}
    </div>

{% endblock %}